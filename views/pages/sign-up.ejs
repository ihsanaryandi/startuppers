<div class="container d-flex content-center align-center" style="min-height: 100vh;">
	<div class="sign-up card" style="max-width: 400px; overflow: hidden;">
		<h1 class="light mb-3 text-center">Daftar ke StartUppers</h1>
		<form id="signupForm">
			<div class="input mb-2">
	          <input type="text" name="input" required id="email" autofocus>
	          <label for="email">Email</label>
	        </div>
	        <div class="input mb-2">
	          <input type="password" name="input" required id="password">
	          <label for="password">Password</label>
	        </div>
	        <div class="input mb-2">
	          <input type="password" name="input" required id="confirmPassword">
	          <label for="confirmPassword">Konfirmasi Password</label>
	        </div>
	        <div style="text-align: right;">
		        <a href="/" class="btn simple ripple dark" style="--color: #3397f5;">Batal</a>
		        <button class="btn ripple" style="background-color: #3397f5;" id="submitBtn">Daftar</button>
			</div>
		</form>
		<div class="loader full" id="registerLoader">
			<span></span>
			<span></span>
			<span></span>
		</div>
	</div>
</div>